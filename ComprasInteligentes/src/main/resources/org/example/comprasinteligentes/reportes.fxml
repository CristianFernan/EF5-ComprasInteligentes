<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBoxID" alignment="CENTER" prefHeight="800.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.comprasinteligentes.controllers.ReportesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> <!-- 00016623 Define el padding del VBox -->
    </padding>
    <children>
        <!-- Reporte A -->
        <VBox spacing="10.0"> <!-- 00016623 Define un VBox con espacio entre nodos de 10 -->
            <HBox spacing="10.0"> <!-- 00016623 Define un HBox con espacio entre nodos de 10 -->
                <Label fx:id="lblIdClienteA" prefHeight="17.0" prefWidth="98.0" text="ID del Cliente:"> <!-- 00016623 Etiqueta para ID del Cliente con dimensiones preferidas -->
                    <HBox.margin>
                        <Insets left="5.0" /> <!-- 00016623 Define el margen izquierdo de la etiqueta en el HBox -->
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="cmbClienteA" prefHeight="25.0" prefWidth="96.0"> <!-- 00016623 ComboBox para seleccionar cliente con dimensiones preferidas -->
                    <HBox.margin>
                        <Insets left="-10.0" /> <!-- 00016623 Define el margen izquierdo del ComboBox en el HBox -->
                    </HBox.margin>
                </ComboBox>
                <Label fx:id="lblFechaInicialA" prefHeight="17.0" prefWidth="123.0" text="Fecha Inicial:" /> <!-- 00016623 Etiqueta para Fecha Inicial con dimensiones preferidas -->
                <DatePicker fx:id="dpFechaInicialA" prefHeight="25.0" prefWidth="134.0"> <!-- 00016623 DatePicker para seleccionar fecha inicial con dimensiones preferidas -->
                    <HBox.margin>
                        <Insets left="-30.0" /> <!-- 00016623 Define el margen izquierdo del DatePicker en el HBox -->
                    </HBox.margin>
                </DatePicker>
                <Label fx:id="lblFechaFinalA" prefHeight="17.0" prefWidth="93.0" text="Fecha Final:" /> <!-- 00016623 Etiqueta para Fecha Final con dimensiones preferidas -->
                <DatePicker fx:id="dpFechaFinalA" prefHeight="25.0" prefWidth="117.0" /> <!-- 00016623 DatePicker para seleccionar fecha final con dimensiones preferidas -->
            </HBox>
            <Button fx:id="btnBuscarCompras" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onBtnBuscarComprasClick" prefHeight="25.0" prefWidth="101.0" styleClass="addBtn" text="Buscar Compras">
                <VBox.margin>
                    <Insets left="250.0" /> <!-- 00016623 Define el margen izquierdo del botón en el VBox -->
                </VBox.margin>
            </Button>
            <TableView fx:id="tbComprasClienteA" prefHeight="150.0">
                <columns>
                    <TableColumn fx:id="colIDCompraA" prefWidth="72.66665649414062" text="ID Compra" /> <!-- 00016623 Columna para ID de Compra con ancho preferido -->
                    <TableColumn fx:id="colFechaA" minWidth="0.0" prefWidth="120.0" text="Fecha" /> <!-- 00016623 Columna para Fecha con ancho preferido -->
                    <TableColumn fx:id="colMontoA" prefWidth="122.0" text="Monto" /> <!-- 00016623 Columna para Monto con ancho preferido -->
                    <TableColumn fx:id="colDescripcionA" prefWidth="244.66668701171875" text="Descripción" /> <!-- 00016623 Columna para Descripción con ancho preferido -->
                </columns>
                <VBox.margin>
                    <Insets /> <!-- 00016623 Define el margen del TableView en el VBox -->
                </VBox.margin>
            </TableView>
        </VBox>

        <Separator fx:id="IdSeparatorAB" /> <!-- 00016623 Separador entre Reporte A y B -->

        <!-- Reporte B -->
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Label fx:id="lblIdClienteB" text="ID del Cliente:" /> <!-- 00016623 Etiqueta para ID del Cliente -->
                <ComboBox fx:id="cmbClienteB" prefWidth="150.0" /> <!-- 00016623 ComboBox para seleccionar cliente -->
                <Label fx:id="lblMesB" text="Mes:" /> <!-- 00016623 Etiqueta para Mes -->
                <TextField fx:id="txtMesB" prefWidth="50.0" /> <!-- 00016623 Campo de texto para ingresar Mes -->
                <Label fx:id="lblAnioB" text="Año:" /> <!-- 00016623 Etiqueta para Año -->
                <TextField fx:id="txtAnioB" prefWidth="50.0" /> <!-- 00016623 Campo de texto para ingresar Año -->
                <Button fx:id="idGastosCliente" mnemonicParsing="false" onAction="#onBtnGastosClienteClick" styleClass="addBtn" text="Gastos del Cliente">
                    <HBox.margin>
                        <Insets left="15.0" /> <!-- 00016623 Define el margen izquierdo del botón en el HBox -->
                    </HBox.margin>
                </Button>
            </HBox>
            <Label fx:id="lblTotalGastadoB" text="Total Gastado: $" /> <!-- 00016623 Etiqueta de texto "Total Gastado: $" -->
        </VBox>

        <Separator fx:id="IdSeparatorBC" /> <!-- 00016623 Separador entre Reporte B y C -->

        <!-- Reporte C -->
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Label fx:id="lblIdClienteC" prefHeight="17.0" prefWidth="81.0" text="ID del Cliente:" /> <!-- 00016623 Etiqueta para ID del Cliente -->
                <ComboBox fx:id="cmbClienteC" prefHeight="25.0" prefWidth="129.0">
                    <HBox.margin>
                        <Insets left="-10.0" /> <!-- 00016623 Define el margen izquierdo del ComboBox en el HBox -->
                    </HBox.margin>
                </ComboBox>
                <Button fx:id="idTarjetasAsociadas" mnemonicParsing="false" onAction="#onBtnTarjetasAsociadasClick" styleClass="addBtn" text="Tarjetas Asociadas">
                    <HBox.margin>
                        <Insets left="225.0" /> <!-- 00016623 Define el margen izquierdo del botón en el HBox -->
                    </HBox.margin>
                </Button>
            </HBox>
            <TextArea fx:id="txtAreaTarjetasClienteC" prefHeight="150.0" prefWidth="560.0" wrapText="true" /> <!-- 00016623 Área de texto para mostrar tarjetas del cliente -->
        </VBox>

        <Separator fx:id="IdSeparatorCD" /> <!-- 00016623 Separador entre Reporte C y D -->

        <!-- Reporte D -->
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Label fx:id="lblFacilitadorD" text="Facilitador:" /> <!-- 00016623 Etiqueta para Facilitador -->
                <ComboBox fx:id="cmbFacilitadorD" prefWidth="150.0" /> <!-- 00016623 ComboBox para seleccionar facilitador -->
                <Button fx:id="idVerCompras" mnemonicParsing="false" onAction="#onBtnVerComprasClick" styleClass="addBtn" text="Ver Compras">
                    <HBox.margin>
                        <Insets left="245.0" /> <!-- 00016623 Define el margen izquierdo del botón en el HBox -->
                    </HBox.margin>
                </Button>
            </HBox>
            <TableView fx:id="tbClientesFacilitadorD" prefHeight="150.0">
                <columns>
                    <TableColumn fx:id="colIDClienteD" text="ID Cliente" /> <!-- 00016623 Columna para ID de Cliente -->
                    <TableColumn fx:id="colNombreClienteD" prefWidth="212.66665649414062" text="Nombre Cliente" /> <!-- 00016623 Columna para Nombre de Cliente con ancho preferido -->
                    <TableColumn fx:id="colCantidadComprasD" prefWidth="130.0" text="Cantidad de Compras" /> <!-- 00016623 Columna para Cantidad de Compras con ancho preferido -->
                    <TableColumn fx:id="colTotalGastadoD" prefWidth="138.666748046875" text="Total Gastado" /> <!-- 00016623 Columna para Total Gastado con ancho preferido -->
                </columns>
            </TableView>
        </VBox>

        <Separator /> <!-- 00016623 Separador final -->

        <!-- Menu -->
        <VBox fx:id="vBoxIdMenu" alignment="TOP_RIGHT" prefHeight="24.0" prefWidth="535.0">
            <children>
                <MenuButton mnemonicParsing="false" text="Menú">
                    <items>
                        <MenuItem fx:id="btnClientes" mnemonicParsing="false" onAction="#onBtnClientesClick" text="Clientes" /> <!-- 00016623 Elemento de menú para Clientes -->
                        <MenuItem fx:id="btnCompras" mnemonicParsing="false" onAction="#onBtnComprasClick" text="Compras" /> <!-- 00016623 Elemento de menú para Compras -->
                        <MenuItem fx:id="btnTarjetas" mnemonicParsing="false" onAction="#onBtnTarjetasClick" text="Tarjetas" /> <!-- 00016623 Elemento de menú para Tarjetas -->
                    </items>
                    <VBox.margin>
                        <Insets top="-20.0" /> <!-- 00016623 Define el margen superior del menú en el VBox -->
                    </VBox.margin>
                </MenuButton>
            </children>
        </VBox>
    </children>
</VBox>
