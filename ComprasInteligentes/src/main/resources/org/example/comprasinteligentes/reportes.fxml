<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBoxID" alignment="CENTER" prefHeight="800.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.comprasinteligentes.controllers.ReportesController"> <!-- 00016623 Define un VBox con alineación central, altura y anchura preferidas, espacio entre nodos y controlador -->
    <padding> <!-- 00016623 Define el padding del VBox -->
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> <!-- 00016623 Define los márgenes internos del VBox -->
    </padding>
    <children> <!-- 00016623 Contenedor para los elementos hijos del VBox -->
        <Label text="Gestión de Reportes"> <!-- 00016623 Etiqueta de texto "Gestión de Reportes" -->
            <font> <!-- 00016623 Define la fuente para la etiqueta -->
                <Font name="System Bold" size="18.0" /> <!-- 00016623 Fuente en negrita de tamaño 18 -->
            </font>
        </Label>

        <!-- Reporte A -->
        <VBox spacing="10.0"> <!-- 00016623 Define un VBox con espacio entre nodos de 10 -->
            <HBox spacing="10.0"> <!-- 00016623 Define un HBox con espacio entre nodos de 10 -->
                <Label fx:id="lblIdClienteA" prefHeight="17.0" prefWidth="98.0" text="ID del Cliente:"> <!-- 00016623 Etiqueta de texto "ID del Cliente:" con altura y anchura preferidas -->
                    <HBox.margin> <!-- 00016623 Define los márgenes del HBox -->
                        <Insets left="5.0" /> <!-- 00016623 Define un margen izquierdo de 5 -->
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="cmbClienteA" prefHeight="25.0" prefWidth="96.0"> <!-- 00016623 ComboBox para seleccionar cliente con altura y anchura preferidas -->
                    <HBox.margin> <!-- 00016623 Define los márgenes del HBox -->
                        <Insets left="-10.0" /> <!-- 00016623 Define un margen izquierdo de -10 -->
                    </HBox.margin>
                </ComboBox>
                <Label fx:id="lblFechaInicialA" prefHeight="17.0" prefWidth="123.0" text="Fecha Inicial:" /> <!-- 00016623 Etiqueta de texto "Fecha Inicial:" con altura y anchura preferidas -->
                <DatePicker fx:id="dpFechaInicialA" prefHeight="25.0" prefWidth="134.0"> <!-- 00016623 DatePicker para seleccionar fecha inicial con altura y anchura preferidas -->
                    <HBox.margin> <!-- 00016623 Define los márgenes del HBox -->
                        <Insets left="-30.0" /> <!-- 00016623 Define un margen izquierdo de -30 -->
                    </HBox.margin>
                </DatePicker>
                <Label fx:id="lblFechaFinalA" prefHeight="17.0" prefWidth="93.0" text="Fecha Final:" /> <!-- 00016623 Etiqueta de texto "Fecha Final:" con altura y anchura preferidas -->
                <DatePicker fx:id="dpFechaFinalA" prefHeight="25.0" prefWidth="117.0" /> <!-- 00016623 DatePicker para seleccionar fecha final con altura y anchura preferidas -->
            </HBox>
            <TableView fx:id="tbComprasClienteA" prefHeight="150.0"> <!-- 00016623 Tabla para listar compras del cliente con altura preferida -->
                <columns> <!-- 00016623 Contenedor para las columnas de la tabla -->
                    <TableColumn fx:id="colIDCompraA" prefWidth="72.66665649414062" text="ID Compra" /> <!-- 00016623 Columna para ID de compra con anchura preferida -->
                    <TableColumn fx:id="colFechaA" minWidth="0.0" prefWidth="120.0" text="Fecha" /> <!-- 00016623 Columna para fecha con anchura mínima y preferida -->
                    <TableColumn fx:id="colMontoA" prefWidth="122.0" text="Monto" /> <!-- 00016623 Columna para monto con anchura preferida -->
                    <TableColumn fx:id="colDescripcionA" prefWidth="244.66668701171875" text="Descripción" /> <!-- 00016623 Columna para descripción con anchura preferida -->
                </columns>
            </TableView>
        </VBox>

        <Separator fx:id="IdSeparatorAB" /> <!-- 00016623 Separador entre Reporte A y B -->

        <!-- Reporte B -->
        <VBox spacing="10.0"> <!-- 00016623 Define un VBox con espacio entre nodos de 10 -->
            <HBox spacing="10.0"> <!-- 00016623 Define un HBox con espacio entre nodos de 10 -->
                <Label fx:id="lblIdClienteB" text="ID del Cliente:" /> <!-- 00016623 Etiqueta de texto "ID del Cliente:" -->
                <ComboBox fx:id="cmbClienteB" prefWidth="150.0" /> <!-- 00016623 ComboBox para seleccionar cliente con anchura preferida -->
                <Label fx:id="lblMesB" text="Mes:" /> <!-- 00016623 Etiqueta de texto "Mes:" -->
                <TextField fx:id="txtMesB" prefWidth="50.0" /> <!-- 00016623 Campo de texto para ingresar mes con anchura preferida -->
                <Label fx:id="lblAnioB" text="Año:" /> <!-- 00016623 Etiqueta de texto "Año:" -->
                <TextField fx:id="txtAnioB" prefWidth="50.0" /> <!-- 00016623 Campo de texto para ingresar año con anchura preferida -->
            </HBox>
            <Label fx:id="lblTotalGastadoB" text="Total Gastado: $" /> <!-- 00016623 Etiqueta de texto "Total Gastado: $" -->
        </VBox>

        <Separator fx:id="IdSeparatorBC" /> <!-- 00016623 Separador entre Reporte B y C -->

        <!-- Reporte C -->
        <VBox spacing="10.0"> <!-- 00016623 Define un VBox con espacio entre nodos de 10 -->
            <HBox spacing="10.0"> <!-- 00016623 Define un HBox con espacio entre nodos de 10 -->
                <Label fx:id="lblIdClienteC" text="ID del Cliente:" /> <!-- 00016623 Etiqueta de texto "ID del Cliente:" -->
                <ComboBox fx:id="cmbClienteC" prefWidth="150.0" /> <!-- 00016623 ComboBox para seleccionar cliente con anchura preferida -->
            </HBox>
            <TextArea fx:id="txtAreaTarjetasClienteC" prefHeight="150.0" prefWidth="560.0" wrapText="true" /> <!-- 00016623 Área de texto para mostrar tarjetas del cliente con altura y anchura preferidas y texto envuelto -->
        </VBox>

        <Separator fx:id="IdSeparatorCD" /> <!-- 00016623 Separador entre Reporte C y D -->

        <!-- Reporte D -->
        <VBox spacing="10.0"> <!-- 00016623 Define un VBox con espacio entre nodos de 10 -->
            <HBox spacing="10.0"> <!-- 00016623 Define un HBox con espacio entre nodos de 10 -->
                <Label fx:id="lblFacilitadorD" text="Facilitador:" /> <!-- 00016623 Etiqueta de texto "Facilitador:" -->
                <ComboBox fx:id="cmbFacilitadorD" prefWidth="150.0" /> <!-- 00016623 ComboBox para seleccionar facilitador con anchura preferida -->
            </HBox>
            <TableView fx:id="tbClientesFacilitadorD" prefHeight="150.0"> <!-- 00016623 Tabla para listar clientes por facilitador con altura preferida -->
                <columns> <!-- 00016623 Contenedor para las columnas de la tabla -->
                    <TableColumn fx:id="colIDClienteD" text="ID Cliente" /> <!-- 00016623 Columna para ID de cliente -->
                    <TableColumn fx:id="colNombreClienteD" prefWidth="212.66665649414062" text="Nombre Cliente" /> <!-- 00016623 Columna para nombre de cliente con anchura preferida -->
                    <TableColumn fx:id="colCantidadComprasD" prefWidth="130.0" text="Cantidad de Compras" /> <!-- 00016623 Columna para cantidad de compras con anchura preferida -->
                    <TableColumn fx:id="colTotalGastadoD" prefWidth="138.666748046875" text="Total Gastado" /> <!-- 00016623 Columna para total gastado con anchura preferida -->
                </columns>
            </TableView>
        </VBox>

        <Separator /> <!-- 00016623 Separador final -->

        <!-- Menu -->
        <VBox fx:id="vBoxIdMenu" alignment="TOP_RIGHT" prefHeight="24.0" prefWidth="535.0"> <!-- 00016623 Define un VBox con alineación a la derecha, altura y anchura preferidas -->
            <children> <!-- 00016623 Contenedor para los elementos hijos -->
                <MenuButton mnemonicParsing="false" text="Menú"> <!-- 00016623 Botón de menú -->
                    <items> <!-- 00016623 Contenedor para los elementos del menú desplegable -->
                        <MenuItem fx:id="btnClientes" mnemonicParsing="false" onAction="#onBtnClientesClick" text="Clientes" /> <!-- 00016623 Opción del menú para Clientes -->
                        <MenuItem fx:id="btnCompras" mnemonicParsing="false" onAction="#onBtnComprasClick" text="Compras" /> <!-- 00016623 Opción del menú para Compras -->
                    </items>
                </MenuButton>
            </children>
        </VBox>
    </children>
</VBox>